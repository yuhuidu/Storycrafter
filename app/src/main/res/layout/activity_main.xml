<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b2"

    tools:context="com.smithjterm.storycrafter.MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="352dp"
        android:layout_height="429dp"
        android:layout_marginBottom="193dp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.197">



        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="54dp"
            android:layout_height="67dp"
            android:layout_marginHorizontal="110dp"
            android:gravity="center"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="164dp"
            tools:layout_editor_absoluteY="109dp">

            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="startNewActivity"
                app:srcCompat="?android:attr/textSelectHandle"
                tools:layout_editor_absoluteX="164dp"
                tools:layout_editor_absoluteY="81dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="111dp"
            android:layout_height="64dp"
            android:layout_marginHorizontal="90dp"
            android:gravity="center"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="142dp"
            tools:layout_editor_absoluteY="183dp">

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="startNewActivity"
                app:srcCompat="?android:attr/textSelectHandle"
                tools:layout_editor_absoluteX="200dp"
                tools:layout_editor_absoluteY="177dp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"></Space>

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="startNewActivity"
                app:srcCompat="?android:attr/textSelectHandle"
                tools:layout_editor_absoluteX="130dp"
                tools:layout_editor_absoluteY="177dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="213dp"
            android:layout_height="54dp"
            android:layout_marginHorizontal="50dp"
            android:gravity="center"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="113dp">

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="startNewActivity"
                app:srcCompat="?android:attr/textSelectHandle"
                tools:layout_editor_absoluteX="136dp"
                tools:layout_editor_absoluteY="250dp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"></Space>

            <ImageButton
                android:id="@+id/imageButton7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="startNewActivity"
                app:srcCompat="?android:attr/textSelectHandle"
                tools:layout_editor_absoluteX="269dp"
                tools:layout_editor_absoluteY="250dp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"></Space>

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="startNewActivity"
                app:srcCompat="?android:attr/textSelectHandle"
                tools:layout_editor_absoluteX="208dp"
                tools:layout_editor_absoluteY="250dp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"></Space>

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="startNewActivity"
                app:srcCompat="?android:attr/textSelectHandle"
                tools:layout_editor_absoluteX="54dp"
                tools:layout_editor_absoluteY="250dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/add_layout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:layout_width="336dp"
            android:layout_height="95dp"
            android:layout_marginTop="53dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
            tools:layout_editor_absoluteX="60dp">

            <Button
                android:id="@+id/helpButton"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:onClick="helpActivity"
                android:text="HELP"
                tools:layout_editor_absoluteX="50dp"
                tools:layout_editor_absoluteY="318dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:onClick="saveStory"
                android:text="save story" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:onClick="startLoadActivity"
                android:text="load story" />

            <Button
                android:id="@+id/add_button"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:onClick="addActivity"
                android:text="add line" />

            <Button
                android:id="@+id/play_button"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:onClick="playActivity"
                android:text="@string/play"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />
        </LinearLayout>

    </LinearLayout>






</android.support.constraint.ConstraintLayout>
