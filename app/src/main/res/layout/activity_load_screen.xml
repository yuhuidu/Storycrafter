<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.smithjterm.storycrafter.LoadScreen">

    <LinearLayout
        android:layout_width="354dp"
        android:layout_height="480dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/loadTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/load_title"
            android:textColor="@android:color/holo_purple"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="33dp"
            tools:layout_editor_absoluteY="53dp" />

        <TextView
            android:id="@+id/loadInfo"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:inputType="textEmailAddress|textMultiLine"
            android:lines="20"
            android:minLines="5"
            android:text="@string/load_blurb"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="25dp"
            tools:layout_editor_absoluteY="93dp" />

        <LinearLayout
            android:layout_width="368dp"
            android:layout_height="87dp"
            android:gravity="center"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="356dp">

            <EditText
                android:id="@+id/loadLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:gravity="center"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="356dp">

            <Button

                android:id="@+id/loadButton"
                android:layout_width="71dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="loadEntryActivity"
                android:text="@string/load_cmd"
                android:textColor="@android:color/background_dark"
                tools:layout_editor_absoluteX="241dp"
                tools:layout_editor_absoluteY="195dp" />

        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
